{
	"extends": "xo-react",
	"ignores": [
		"src/vite-env.d.ts"
	],
	"rules": {
		"unicorn/filename-case": [
			"error",
			{
				"cases": {
					"camelCase": true,
					"pascalCase": true
				}
			}
		],
		"n/file-extension-in-import": [
			"error",
			"always",
			{
				".tsx": "always"
			}
		],
		"jsx-quotes": [
			"error",
			"prefer-double"
		],
		"@typescript-eslint/quotes": [
			"error",
			"double"
		],
		"object-shorthand": [
			"error",
			"always",
			{
				"avoidExplicitReturnArrows": false
			}
		],
		"@typescript-eslint/keyword-spacing": [
			"error",
			{
				"overrides": {
					"if": {
						"after": false
					},
					"for": {
						"after": false
					},
					"while": {
						"after": false
					},
					"catch": {
						"after": false
					}
				}
			}
		],
		"arrow-parens": "off"
	}
}
